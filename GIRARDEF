//void girar (char direcci칩n, char sentido,int tiempo, int velocidad);
void direccion (char direccion, int tiempo, int velocidad);
void sentido (char sentido, int tiempo,int velocidad);

//Salida C: Rueda izquierda
//Salida B: Rueda derecha

task main(){
     direccion('D',1000,75);
     sentido('D',1000,75);

 }
 
 
  void direccion(char direccion,int tiempo, int velocidad){

   if(direccion == 'D'){
      //direcci칩n derecha
    OnFwd(OUT_C, velocidad);
    OnFwd(OUT_B, velocidad/2);
    Wait(tiempo);
   }

   else if (direccion=='I'){
     //direci칩n izquierda
    OnFwd(OUT_C, 50);
    OnFwd(OUT_B, 75);
    Wait(tiempo);
   }
 }
 
    void sentido(char sentido,int tiempo,int velocidad){

    if(sentido=='D'){
     //sentido delante
    OnFwd(OUT_BC,75);
    Wait(tiempo);
   }

   else if(sentido=='A'){
    //sentido atr치s
    OnRev(OUT_BC,75);
    Wait(tiempo);
   }
  }
